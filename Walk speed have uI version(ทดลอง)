local DEFAULT_SPEED = 16
local BOOST_SPEED = 40

local player = game.Players.LocalPlayer
local gui = Instance.new("ScreenGui")
gui.Name = "WalkSpeedUI"
gui.ResetOnSpawn = false
gui.Parent = player:WaitForChild("PlayerGui")

local frame = Instance.new("Frame")
frame.Size = UDim2.new(0, 180, 0, 70)
frame.Position = UDim2.new(0, 20, 0, 20)
frame.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
frame.BorderSizePixel = 0
frame.Parent = gui

local title = Instance.new("Prem hack")
title.Size = UDim2.new(1, 0, 0, 30)
title.BackgroundTransparency = 1
title.Text = "Walk Speed"
title.Font = Enum.Font.SourceSansBold
title.TextSize = 22
title.TextColor3 = Color3.fromRGB(255, 255, 255)
title.Parent = frame

local toggle = Instance.new("TextButton")
toggle.Size = UDim2.new(0, 100, 0, 30)
toggle.Position = UDim2.new(0.5, -50, 0, 35)
toggle.BackgroundColor3 = Color3.fromRGB(150, 0, 0)
toggle.Text = "OFF"
toggle.Font = Enum.Font.SourceSansBold
toggle.TextSize = 20
toggle.TextColor3 = Color3.fromRGB(255, 255, 255)
toggle.Parent = frame

local enabled = false

local function setSpeed()
	local char = player.Character
	if char and char:FindFirstChildOfClass("Humanoid") then
		local hum = char:FindFirstChildOfClass("Humanoid")
		if enabled then
			hum.WalkSpeed = BOOST_SPEED
		else
			hum.WalkSpeed = DEFAULT_SPEED
		end
	end
end

local function toggleSpeed()
	enabled = not enabled
	if enabled then
		toggle.Text = "ON"
		toggle.BackgroundColor3 = Color3.fromRGB(0, 200, 0)
	else
		toggle.Text = "OFF"
		toggle.BackgroundColor3 = Color3.fromRGB(150, 0, 0)
	end
	setSpeed()
end

toggle.MouseButton1Click:Connect(toggleSpeed)

player.CharacterAdded:Connect(function()
	wait(1)
	setSpeed()
end)

setSpeed(16)
